<!-- Favorites -->
<div class="container">
    
    <!-- Movies -->
    <% for(let i=0; i < user.favMovieList.length; i++){ %>
        <div class="item container-sm" >
            <a href='/movies/<%=user.favMovieList[i]._id %>/movie'>
                <h1><%=user.favMovieList[i].title %></h1>
            </a>
            <img src="<%=user.favMovieList[i].img %>" alt="" class=" img-fluid img-thumbnail ">
            <br>
            <form action="/profile/login/<%=user.favMovieList[i]._id %>/moviedel/?_method=put" method="POST" class="d-inline">
                <input type="submit" value="Delete" name="delete" class="btn btn-danger">
            </form>
        </div>
    <% } %>       
    
    <!-- Tv-shows -->
    <% for(let i=0; i < user.favTvshowList.length; i++){ %>
        <div class="item container-sm" >
            <a href='/tv-shows/<%=user.favTvshowList[i]._id %>/tvshow'>
                <h1><%=user.favTvshowList[i].title %></h1>
            </a>
            <img src="<%=user.favTvshowList[i].img %>" alt="" class=" img-fluid img-thumbnail ">
            <br>
            <form action="/profile/login/<%=user.favTvshowList[i]._id %>/tvshowdel/?_method=put" method="POST" class="d-inline">
                <input type="submit" value="Delete" name="delete" class="btn btn-danger">
            </form>
        </div>
    <% } %>  

    <!-- Games -->
    <% for(let i=0; i < user.favGameList.length; i++){ %>
        <div class="item container-sm" >
            <a href='/games/<%=user.favGameList[i]._id %>/game'>
                <h1><%=user.favGameList[i].title %></h1>
            </a>
            <img src="<%=user.favGameList[i].img %>" alt="" class=" img-fluid img-thumbnail ">
            <br>
            <form action="/profile/login/<%=user.favGameList[i]._id %>/gamedel/?_method=put" method="POST" class="d-inline">
                <input type="submit" value="Delete" name="delete" class="btn btn-danger">
            </form>
        </div>
    <% } %>  

</div>





