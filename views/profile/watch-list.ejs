            </a>
            <img src="<%=user.watchList.tvshows[i].img %>" alt="" class=" img-fluid img-thumbnail ">
            
            <br>

            <form action="/profile/login/<%=user.watchList.tvshows[i]._id %>/watchlist/tvshowdel/?_method=put" method="POST" class="d-inline">
                <!-- <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">@</span>
                    <input type="text" class="form-control" name="userName" placeholder="Your username" aria-label="Username" aria-describedby="addon-wrapping">
                </div> -->
                <input type="submit" value="Delete" name="delete" class="btn btn-danger">
            </form>

        </div>
    <% } %>   
    
    
    <!-- Games -->
    <% for(let i=0; i <user.watchList.games.length; i++){ %>
        <div class="item container-sm" >
            <a href='/games/<%=user.watchList.games[i]._id %>/game'>
                <h1><%=user.watchList.games[i].title %></h1>
            </a>
            <img src="<%=user.watchList.games[i].img %>" alt="" class=" img-fluid img-thumbnail ">
            
            <br>

            <form action="/profile/login/<%=user.watchList.games[i]._id %>/watchlist/gamedel/?_method=put" method="POST" class="d-inline">
